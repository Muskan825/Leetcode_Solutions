ïƒ°	class Solution {
    public int findClosestNumber(int[] nums) {
        int min = Integer.MAX_VALUE;
        int dis = 0;
        for(int i=0;i<nums.length;i++){
            if(Math.abs(nums[i])<min){
                min = Math.abs(nums[i]);
                dis = nums[i];
            }else if(Math.abs(nums[i])==min){
                if(nums[i]>dis){
                    dis=nums[i];
                }
            }
        }
        
        return dis;
    }
}
